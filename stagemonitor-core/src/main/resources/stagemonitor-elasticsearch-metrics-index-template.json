{
    "template": "stagemonitor-metrics-*",
    "settings": {
        "index": {
            "refresh_interval": "5s"
        }
    },
    "mappings": {
        "_default_": {
            "dynamic_templates": [
                {
                    "strings": {
                        "match": "*",
                        "match_mapping_type": "string",
                        "mapping": { "type": "string", "index": "not_analyzed", "doc_values": true }
                    }
                }
            ],
            "_all": { "enabled": false },
            "_source": { "enabled": false },
            "properties": {
                "@timestamp": { "type": "date" },
                "value": {
                   "type": "double"
                }
            }
        }
    }
}
